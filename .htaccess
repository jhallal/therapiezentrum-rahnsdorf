# Enable rewrite engine
RewriteEngine On

# If the requested resource exists as a file or directory, serve it directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# If the request is for a non-file/directory, rewrite to the index.html in that directory
# This handles direct access to routes like /impressum
RewriteRule ^([^/]+)/?$ $1/index.html [L]

# For the root path
RewriteRule ^$ index.html [L]